    "Layouts": {
      "Grid System": {
        "12 Column": {
          "columns": 12,
          "gutter": "16px",
          "margin": "24px"
        },
        "8 Column": {
          "columns": 8,
          "gutter": "16px",
          "margin": "24px"
        },
        "4 Column": {
          "columns": 4,
          "gutter": "16px",
          "margin": "16px"
        }
      },
      "Spacing Scale": {
        "XS": "4px",
        "SM": "8px",
        "MD": "16px",
        "LG": "24px",
        "XL": "32px",
        "XXL": "48px"
      },
      "Breakpoints": {
        "Mobile": "375px",
        "Tablet": "768px",
        "Desktop": "1024px",
        "Large Desktop": "1440px"
      }
    }
