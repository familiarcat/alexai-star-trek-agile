  "artboards": {
    "Design System": {
      "width": 1200,
      "height": 800
    },
    "Components": {
      "width": 1600,
      "height": 1200
    },
    "Layouts": {
      "width": 1920,
      "height": 1080
    }
  },
  "interactions": {
    "Button Hover": "Opacity change + scale transform",
    "Form Focus": "Border color change + shadow",
    "Navigation Active": "Background color change",
    "Card Hover": "Shadow increase + slight lift"
  }
