{
  "extends": [
    "next/core-web-vitals",
    "next/typescript"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "rules": {
    "no-console": "off",
    "prefer-const": "off",
    "no-var": "off",
    "@typescript-eslint/no-unused-vars": "warn",
    "@typescript-eslint/no-explicit-any": "warn"
  },
  "ignorePatterns": [
    "src/app/agent-monitoring/**",
    "src/app/agile-project/**",
    "src/app/alexai/**",
    "src/app/analytics/**"
  ]
} 